<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ches"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Chess Clock By Harshit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="283dp"
        android:ems="10"
        android:hint="Time limit Hour"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Time Limit Minute"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/Hour"
        app:layout_constraintTop_toBottomOf="@+id/Hour" />

    <EditText
        android:id="@+id/Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Time Limit Second"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/Minute"
        app:layout_constraintTop_toBottomOf="@+id/Minute" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="36dp"
        android:onClick="go"
        android:text="GO"
        app:layout_constraintEnd_toEndOf="@+id/Increment"
        app:layout_constraintTop_toBottomOf="@+id/Increment" />

    <EditText
        android:id="@+id/Increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Increment"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/Second"
        app:layout_constraintTop_toBottomOf="@+id/Second" />

</androidx.constraintlayout.widget.ConstraintLayout>